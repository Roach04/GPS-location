<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_prologue"
    tools:context="com.project.frag.PrologueFragment">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:onClick="address"
            android:layout_height="200dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/address"
                android:id="@+id/imageViewAddress"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Addressing."
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:typeface="monospace"
                android:gravity="center"
                android:id="@+id/textViewAddress"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_marginLeft="4dp"
            android:onClick="map"
            android:layout_height="200dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/map"
                android:id="@+id/imageViewMap"
                android:paddingTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Map."
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:typeface="monospace"
                android:gravity="center"
                android:id="@+id/textViewMap"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="223dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayoutLower"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:onClick="history"
            android:layout_height="200dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/histo"
                android:id="@+id/imageViewLocations"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="History."
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:typeface="monospace"
                android:gravity="center"
                android:id="@+id/textViewLocations"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_marginLeft="4dp"
            android:onClick="near"
            android:layout_height="200dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/near"
                android:id="@+id/imageViewNear"
                android:paddingTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Near Me."
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:typeface="monospace"
                android:gravity="center"
                android:id="@+id/textViewNear"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
